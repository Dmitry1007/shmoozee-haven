<% if current_admin? %>
  <div class="row navbar">
  <div class="medium-6 columns">
    <%= link_to "ADMIN", admin_categories_path, class: "logo-text-link" %>
  </div>

    <div class="medium-6 columns">
      <ul class="inline-list right">
        <li><a data-method="delete" href="/logout">Logout</a></li>
        <li><a href="/admin/orders">Orders</a></li>
        <li><a href="/admin/items/new" data-reveal-id="AdminAddsItemModal">Add Items</a></li>
      </ul>
    </div>
  </div>
<% elsif current_user %>
  <div class="row navbar">
    <div class="medium-6 columns">
      <%= link_to "Fruits For Humanity", root_path, class: "logo-text-link" %>
    </div>

    <div class="medium-6 columns">
      <ul class="inline-list right">
        <li><a data-method="delete" href="/logout">Logout</a></li>
        <li><span data-tooltip aria-haspopup="true" class="tip-bottom radius" title="<%= render 'layouts/about_company' %>"><a>About</a></span></li>
        <li><a href="#">Contact</a></li>
          <% if !current_admin? %>
            <li><a href="/user/orders">My Orders</a></li>
          <% end %>
        <li><%= link_to '<i class="fi-shopping-cart"></i>'.html_safe, cart_path, title: @cart.count_all.to_s + " Items Live Here", data: {tooltip: ""}, :class => "tip-bottom radius" %></li>
      </ul>
    </div>
  </div>
<% else %>
<div class="row navbar">
    <div class="medium-6 columns">
      <%= link_to "Fruits For Humanity", root_path, class: "logo-text-link" %>
    </div>

    <div class="medium-6 columns">
      <ul class="inline-list right">
        <li><span data-tooltip aria-haspopup="true" class="tip-bottom radius" title="<%= render 'layouts/about_company' %>"><a>About</a></span></li>
        <li><a href="#">Contact</a></li>
        <li><a href="/users" data-reveal-id="RegisterModal">Register</a></li>
        <li><a href="/login" data-reveal-id="LoginModal">Login</a></li>
        <li><%= link_to '<i class="fi-shopping-cart"></i>'.html_safe, cart_path, title: @cart.count_all.to_s + " Items Live Here", data: {tooltip: ""}, :class => "tip-bottom radius" %></li>
      </ul>
    </div>
  </div>
<% end %>

<%= render "layouts/login_register_modals" %>