<div class="row">
  <div class="medium-12 columns">
    <div class="row">
      <%= image_tag("give-rasberries.jpg", class: "medium-12 columns") %>
    </div>
  </div>
</div>

<div class="row">
  <% @categories.each do |category| %>
    <div class="medium-4 columns image_rapper">
      <%= image_tag(category.image.url, class: "cat_image") %>
      <div class="text_title"><%= link_to category.name, admin_category_path(category.id) %></div>

      <% category.items.any? { |item| item.available? } ? status = "Retire" : status = "Un-Retire" %>
      <%= link_to status, admin_category_path(category.id), method: :put, class: "button round tiny" %>
    </div>
  <% end %>
</div>

<div id="AdminAddsItemModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <%= form_for(:item, url: admin_items_path, html: {multipart: true}) do |f| %>
    <h3>Add Item</h3><br>
    <%= f.text_field :title %>
    <%= f.text_field :description %>
    <%= f.text_field :price %>
    <%= f.file_field :image %>
    <%= f.collection_select :category, Category.all, :id, :name, prompt: true, include_blank: "New Category" %>
    <div class="hidden_input_field" id="hif">
     <%= f.file_field :category_image %>
     <%= f.text_field :new_category, label: "New Category Name" %>
    </div>
    <%= f.submit "Add Item" %>
  <% end %>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>