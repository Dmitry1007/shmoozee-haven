<div class="row">
  <div class="medium-12 columns">
    <div class="row">
      <%= image_tag("give-rasberries.jpg", class: "medium-12 columns") %>
    </div>
  </div>
</div>

<div class="row">
  <% @categories.each do |category| %>
    <div class="medium-4 columns image_rapper">
      <%= image_tag(category.image.url, class: "cat_image") %>
      <div class="text_title"><%= link_to category.name, admin_category_path(category.id) %></div>

      <% category.items.any? { |item| item.available? } ? status = "Retire" : status = "Un-Retire" %>
      <%= link_to status, admin_category_path(category.id), method: :put, class: "button round tiny" %>
    </div>
  <% end %>
</div>

<%= render "admin/categories/admin_update_create_modals" %>