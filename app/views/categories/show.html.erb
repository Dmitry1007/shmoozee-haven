<div class="row">
  <% @category_items.each do |item| %>
    <% if item.available? %>
      <div class="card medium-3 columns">
        <%= image_tag(item.image.url, class: "item_image") %>
          <div class="card-divider">
            <h6><b><%= item.title %></b></h6>
          </div>
          <div class="card-section">
            <p><%= item.description %></p>
            <h6>&#36;<%= "%.2f" % item.price %></h6>
            <%= form_tag cart_items_path, method: :post do %>
              <%= select_tag :quantity, options_for_select(1..10) %>
              <%= hidden_field_tag :item_id, item.id %>
              <%= submit_tag "Add To Cart", class: "tiny button radius" %>
            <% end %>
          </div>
      </div>
    <% end %>
  <% end %>
</div>