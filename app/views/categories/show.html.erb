<%= flash[:notice] %>
<div class="row">
  <% @category_items.each do |item| %>
    <div class="small-3 columns">
      <img src="http://placehold.it/400x300&text=[img]"/>
        <a href="" data-reveal-id="myModal"><%= item.title %></a>

        <form action="/cart_items" method="post">
          <label class="quantity-input">
            <input type="number" name="quantity" value="1" min="1" max="10" id="quantity">
            <input type="hidden" name="item_id"  value="<%= item.id %>">
            <input type="submit" value="Add To Cart"  class="button tiny">
          </label>
        </form>
    </div>

    <div id="myModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
      <h2 id="modalTitle"><%= item.title %></h2>
        <p class="lead"><%= item.description %></p>
        <p><%= item.price %></p>
          <a class="close-reveal-modal" aria-label="Close">&#215;</a>
    </div>
  <% end %>
</div>